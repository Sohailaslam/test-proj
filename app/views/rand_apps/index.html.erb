<!-------------------------RANDOM INTEGERS Generated by Clicking Button----------------------------------->
<div class="container random-int">
    <div class="row">
       <h1>Randomize It</h1>
    </div>
    <div class="row mb-lg">
        <%= form_for(@rand_app) do |f| %>
            <%= f.submit "Randomize It form", :class => "btn btn-primary mb-lg" %>
        <% end %>
    </div>
    <div class="row">
        <a href="#" class="btn btn-primary">Reset all the Data</a>
        <%= link_to "Reset Data" %>
    </div>
</div>

<hr/>

<!-------------------------List of Generated RANDOM INTEGERS----------------------------------->
<div class="container list-int">
    <div class="row">
        <h2>This is the list with all integers already generated</h2>
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>Integers</th>
              </tr>
            </thead>
            <tbody>
            <% if @rand_apps.present? %>
                <% @rand_apps.each do |num| %>
                  <tr>
                    <td><%= num.number %></td>
                  </tr>
                <% end %>
            <% else %>
                <tr>
                    <td> No Number Generated yet</td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>

<hr/>

<!--------------------------Modal--------------------->

<div class="container">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-interger-edit">Edit Integer</button>

  <!-- Modal -->
  <div class="modal fade" id="modal-interger-edit" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit this Integer</h4>
        </div>
        <div class="modal-body">
          <form>
              <input class="form-control input-md">
              <input type="submit" class="btn btn-primary btn-md mt-lg" value="Edit">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
</div>
