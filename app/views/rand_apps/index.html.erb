<!-------------------------RANDOM INTEGERS Generated by Clicking Button----------------------------------->
<div class="container random-int">
    <div class="row">
       <h1>Randomize It</h1>
    </div>
    <div class="row mb-lg mt-lg">
        <%= form_with(model: @rand_app) do |f| %>
            <%= f.submit "Randomize It", :class => "btn btn-primary" %>
        <% end %>
    </div>
    <div class="row">
        <%= link_to "Reset all the Data", destroy_all_rand_apps_path,:remote => true ,:method => :delete ,:class => "btn btn-primary" %>
    </div>
</div>

<hr/>
<!-------------------------Chart----------------------------------->
<div id="graph">
   
        <%= render 'graph' %>
</div>
<!-------------------------List of Generated RANDOM INTEGERS----------------------------------->
<div class="container list-int">
    <div class="row">
        <h2>This is the list with all integers already generated</h2>
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>Integers</th>
              </tr>
            </thead>
            <tbody>
            <% if @rand_apps.present? %>
                <% @rand_apps.each do |num| %>
                  <tr>
                    <td>
                    <%= link_to num.number, edit_rand_app_path(num), :remote => true %></td> %>
                  </tr>
                <% end %>
            
            <% end %>
            </tbody>
        </table>
    </div>
    <div id="mm"></div>
</div>

<hr/>
